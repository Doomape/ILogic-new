@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/SiteMaster.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery-slider.js")" type="text/javascript"></script>
<style>
    #mcts1 {
        width: 900px;
        height: 100px;
        margin: 0 auto;
        margin-top: -3px;
        white-space: nowrap;
        position: relative;
        font-size: 0px;
        background-color: transparent;
    }

        #mcts1 > * {
            display: none;
        }

        /*-------- div.item is each thumbnail's wrapper created by the javascript ------*/
        #mcts1 div.item {
            padding: 0px;
            margin-right: 5px; /* this specifies the distance between each thumbnail */
            background-color: transparent;
            /*  border:1px solid #ddd;*/
            text-align: center;
            position: relative;
            margin-right: -10px;
            margin-left: 30px;
        }

        #mcts1 img {
            border: none;
        }
        /*---------built-in navigation buttons-------*/
        #mcts1 .navPrev, #mcts1 .navNext {
            width: 16px;
            height: 22px;
            position: absolute;
            background: url(/Content/images/navButtons.png);
            display: inline-block;
            z-index: 5;
            cursor: pointer;
        }

        #mcts1 .navPrev {
            background-position: 0 -22px;
            top: 33px;
            left: 3px;
        }

            #mcts1 .navPrev:hover {
                background-position: 0 -44px;
            }

        #mcts1 .navPrevDisabled, #mcts1 .navPrevDisabled:hover {
            background-position: 0 0;
            cursor: default;
        }

        #mcts1 .navNext {
            background-position: -16px -22px;
            top: 33px;
            right: 3px;
        }

            #mcts1 .navNext:hover {
                background-position: -16px -44px;
            }

        #mcts1 .navNextDisabled, #mcts1 .navNextDisabled:hover {
            background-position: -16px 0;
            cursor: default;
        }
    /*
#mcts1 .navPause, #mcts1 .navPlay {left:360px;top:0px;}
#mcts1 .navPause {background-position:0 -66px;} 
#mcts1 .navPause:hover {background-position:0 -88px;} 
#mcts1 .navPlay {background-position:-16px -66px;} 
#mcts1 .navPlay:hover {background-position:-16px -88px;} */
    .navPrev, .navNext {
        -moz-user-select: -moz-none;
        -khtml-user-select: none;
        -webkit-user-select: none;
        -o-user-select: none;
        user-select: none;
    }
    /*---------built-in navigation bullets--------*/
    /* Note: the navBullets won't be available when "scrollByEachThumb" was set to false in the Javascript.*/
    #mcts1 .navBullets {
        display: none;
    }
    /*--------- class1 that is for the slide with HTML content------------*/
    .class1 {
        width: 130px;
        height: 15px;
        background: #444;
        text-align: center;
        color: White;
        font: normal 11px/14px Arial;
        white-space: normal;
    }

        .class1 p {
            margin-top: 0;
            margin-bottom: 0px;
            padding-top: 0px;
            font: bold 12px Verdana;
            color: #007acc;
        }
    /* --------- Others ------- */
    #mcts1 {
        transform: translate3d(0,0,0);
        -ms-transform: translate3d(0,0,0);
        -moz-transform: translate3d(0,0,0);
        -o-transform: translate3d(0,0,0);
        -webkit-transform: translate3d(0,0,0);
    }

    #thumbs_container {
        width: 115px;
        float: left;
        height: 100%;
        background: url('/Content/images/top_bottom_background.gif');
        position: relative;
    }

        #thumbs_container #thumbs {
            width: 100%;
            height: 50%;
            background-color: pink;
            position: absolute;
            top: 25%;
        }
</style>
