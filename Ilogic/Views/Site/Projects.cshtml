@{
    ViewBag.Title = "Projects";
    Layout = "~/Views/Shared/SiteMaster.cshtml";
}
<script src="@Url.Content("~/Scripts/jquery-slider.js")" type="text/javascript"></script>
<style>
    #mcts1 {
        width: 900px;
        height: 100px;
        margin: 0 auto;
        margin-top: -3px;
        white-space: nowrap;
        position: relative;
        font-size: 0px;
        background-color: transparent;
         -ms-transform: translate3d(0,0,0);
        -moz-transform: translate3d(0,0,0);
        -o-transform: translate3d(0,0,0);
        -webkit-transform: translate3d(0,0,0);
        transform: translate3d(0,0,0);
    }

        #mcts1 > * {
            display: none;
        }

        /*-------- div.item is each thumbnail's wrapper created by the javascript ------*/
        #mcts1 div.item {
            padding: 0px;
            margin-right: 5px; /* this specifies the distance between each thumbnail */
            background-color: transparent;
            /*  border:1px solid #ddd;*/
            text-align: center;
            position: relative;
            margin-right: -10px;
            margin-left: 30px;
        }

        #mcts1 img {
            border: none;
        }
        /*---------built-in navigation buttons-------*/
        #mcts1 .navPrev, #mcts1 .navNext {
            width: 16px;
            height: 22px;
            position: absolute;
            background: url(/Content/images/navButtons.png);
            display: inline-block;
            z-index: 5;
            cursor: pointer;
        }

        #mcts1 .navPrev {
            background-position: 0 -22px;
            top: 33px;
            left: 3px;
        }

            #mcts1 .navPrev:hover {
                background-position: 0 -44px;
            }

        #mcts1 .navPrevDisabled, #mcts1 .navPrevDisabled:hover {
            background-position: 0 0;
            cursor: default;
        }

        #mcts1 .navNext {
            background-position: -16px -22px;
            top: 33px;
            right: 3px;
        }

            #mcts1 .navNext:hover {
                background-position: -16px -44px;
            }

        #mcts1 .navNextDisabled, #mcts1 .navNextDisabled:hover {
            background-position: -16px 0;
            cursor: default;
        }
    /*
#mcts1 .navPause, #mcts1 .navPlay {left:360px;top:0px;}
#mcts1 .navPause {background-position:0 -66px;} 
#mcts1 .navPause:hover {background-position:0 -88px;} 
#mcts1 .navPlay {background-position:-16px -66px;} 
#mcts1 .navPlay:hover {background-position:-16px -88px;} */
    .navPrev, .navNext {
        -moz-user-select: -moz-none;
        -khtml-user-select: none;
        -webkit-user-select: none;
        -o-user-select: none;
        user-select: none;
    }
    /*---------built-in navigation bullets--------*/
    /* Note: the navBullets won't be available when "scrollByEachThumb" was set to false in the Javascript.*/
    #mcts1 .navBullets {
        display: none;
    }
    /*--------- class1 that is for the slide with HTML content------------*/
    .class1 {
        width: 130px;
        height: 15px;
        background: #444;
        text-align: center;
        color: White;
        font: normal 11px/14px Arial;
        white-space: normal;
    }

        .class1 p {
            margin-top: 0;
            margin-bottom: 0px;
            padding-top: 0px;
            font: bold 12px Verdana;
            color: #007acc;
        }
    /* --------- Others ------- */

    #thumbs_container {
        width: 115px;
        float: left;
        height: 100%;
        position: relative;
    }

        #thumbs_container #thumbs {
            width: 100%;
            height: 100%;
            position: absolute;
            margin-top: 40px;
            /*overflow: hidden;*/
        }
    .logos {
        margin-top: 12px;
    }
    .thumbStyle {
        margin: 10px 10px 0 10px;
        border: 1px solid gray;
        -webkit-box-shadow: 1px 1px 10px gray;
        box-shadow: 1px 1px 10px gray;
        width: 93px;
        height: 93px;
        -moz-background-size: 93px 93px;
        -o-background-size: 93px 93px;
        -webkit-background-size: 93px 93px;
        background-size: 93px 93px !important;
        background-repeat: no-repeat;
    }
    .main_image {
        max-height:400px;
        margin-top:50px;
    }
    .description {
        height: 300px;
        margin-top: 50px;
        width: 300px;
        border: 1px solid gray;
        -webkit-box-shadow: 1px 1px 10px;
        box-shadow: 1px 1px 10px;
        text-align: center;
    }
    .thumb_mask {
        width: 93px;
        height: 93px;
        background: url("/Content/images/top_bottom_background.gif");
        -ms-word-wrap: break-word;
        word-wrap: break-word;
        display:table;
    }
        .thumb_mask:hover {
            -moz-transition: all 1s linear;
            -o-transition: all 1s linear;
            -webkit-transition: all 1s linear;
            transition: all 1s linear;
            -moz-transform: scale(1);
            -ms-transform: scale(1);
            -o-transform: scale(1);
            -webkit-transform: scale(1);
            transform: scale(1);
            opacity: 0;
        }
    .thumb_text {
        color: white;
        font-size: 20px;
        text-align: center;
        /*padding:24px 5px 0 5px;*/
        display: table-cell;
        vertical-align: middle;
        font-family:Helvetica, Arial, 'DejaVu Sans', 'Liberation Sans', Freesans, sans-serif;
    }
</style>

<div id="products" style="width: 100%; background: url('/Content/images/contentImage.gif');">
    <div id="thumbs_container">
        <div id="thumbs">
        </div>
    </div>

    <div id="img_container" style="width: 580px; float: left; text-align: center; height: 100%">
    </div>

    <div id="text" style="width: 300px; float: left; height: 100%">
        <div class="description">
            <div style="border: 1px solid gray; background: rgb(53, 51, 51); text-align: center; color: white; height: 30px; line-height: 30px;">
                <p>Description</p>
            </div>
            <div id="productDescription" style="width: 300px; height: 300px; margin-top: 10px;"></div>
        </div>
    </div>
</div>

<script type="text/javascript">

    var project_ids = new Array();
    var project_screenshots = new Array();
    var project_counter = new Array();
    var project_description = new Array();
    var thumb_description = new Array();
    var current_project = "";

    $(window).resize(function () {
        var height = parseInt($(window).height() - 210);
        $("#products").css("height", height);
    });

    $(document).ready(function () {

        $("#top-row-items").empty();
        var openLogoDiv = "<div onclick='redirectAsp()' class='mouse_hover' style='float: left; position: relative; width: 114px; height: 100px; border-right: 1px solid black; text-align: center;'>";
        var imgLogo = "<img src='/Content/images/logo.png'/>";
        var closeDiv = "</div>";
        var productsDiv = "<div class='div2' style='float: left; width: 900px; height: 100px;'>";
        var productItems = "<div id='mcts1' style='float: left;'>";
        $("#top-row-items").append(openLogoDiv + imgLogo + closeDiv + productsDiv + productItems + closeDiv);

        var height = parseInt($(window).height() - 210);
        $("#products").css("height", height);
        $("html").css("height", height);

        $.ajax({
            url: "getProjects",
            type: "GET",
            data: {},
            success: function (data) {

                project_ids = data.id;
                project_screenshots = data.img;
                project_counter = data.screen_counter;
                project_description = data.desc;
                thumb_description = data.thumb_desc;
                //debugger;
                for (b = 0; b < data.id.length; b++) {
                    $("#mcts1").append("<a href='javascript:void(0)'><div onclick='showThumbs(" + data.id[b] + ")'>" +
                        "<img class='mouse_hover logos' src='" + data.logos[b] + "'/></div></a>");
                    if (b == 0)
                        showThumbs(data.id[b]);
                }
            }
        });

    });

    function showThumbs(e) {
        $("#thumbs").empty();
        $("#productDescription").empty();

        var which_project = project_ids.indexOf(e.toString());
        current_project = which_project;
        var project_image_count = parseInt(project_counter[which_project]);
        var thumb_desc = thumb_description[current_project].split(",");
        
        $("#productDescription").append("<p>" + project_description[which_project] + "</p>");
        //first project
        if (which_project == 0) {
            for (j = 0; j < project_image_count; j++) {
                debugger;
                var image_name = project_screenshots[j].replace(/\\/g, "/").split("/")[6].split(".")[0];
                var image_desc = "";
                for (i = 0; i < thumb_desc.length; i++) {
                    if (thumb_desc[i].split("@@")[0] == image_name)
                        image_desc = thumb_desc[i].split("@@")[1];
                }
                $("#thumbs").append("<a style='text-decoration: none;' href='javascript:void(0);'>" +
                    "<div onclick='ShowBigImage(this)' id='" + j + "' class='thumbStyle' " +
                    "style='background:url(" + project_screenshots[j].replace(/\\/g, "/") + ") center center'>"+
                    "<div class='thumb_mask'><p class='thumb_text'>" + image_desc + "</p></div></div></a>");

                //$("#" + j + "").fadeIn((j + 1) * 1000);
                if (j == 0)
                    ShowBigImage($("#" + j + ""));
            }
        }
        else {
            var how_many_img_are_skipped = 0;
            for (j = 0; j < which_project; j++) {
                how_many_img_are_skipped += parseInt(project_counter[j]);
            }
            for (z = how_many_img_are_skipped; z < project_image_count + how_many_img_are_skipped; z++) {
                $("#thumbs").append("<a style='text-decoration: none;' href='javascript:void(0);'>" +
                    "<div onclick='ShowBigImage(this)' id='" + z + "' class='thumbStyle' "+
                    "style='background:url(" + project_screenshots[z].replace(/\\/g, "/") + ") center center'>"+
                    "<div class='thumb_mask'></div></div></a>");
                //$("#" + z + "").fadeIn((z + 1) * 1000);
                if (z == how_many_img_are_skipped)
                    ShowBigImage($("#" + z + ""));
            }
        }
    }

    function ShowBigImage(e) {
        var image_src = $(e).css("background-image").replace("url(","").replace(")","").replace("/thumbs","");
        $("#img_container").empty();
        $("#img_container").append("<img class='main_image' src='" + image_src + "'/>");
        $(".main_image").fadeIn(1000);
    }

</script>

