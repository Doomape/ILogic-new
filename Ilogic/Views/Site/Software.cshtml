<script type="text/javascript">

    var software_ids = new Array();
    var software_screenshots = new Array();
    var software_counter = new Array();
    var software_description = new Array();
    var thumb_description = new Array();
    var current_software = "";


    $(document).ready(function () {

        $("#top-row-items").empty();
        var logo = "<a href='javascript:void(0);'><div id='logo' onclick='redirectAsp()' class='mouse_hover' style='float: left; position: relative; width: 115px; height: 100px; border-right: 1px solid black; text-align: center;'></div></a>";
        var closeDiv = "</div>";
        var softwareDiv = "<div class='div2' style='float: left; width: 900px; height: 100px;'>";
        var scrollItems = "<div class='scrollable' id='navigator'><a class='prev browse left'></a><div class='items'></div><a class='next browse right'></a></div>";
        $("#top-row-items").append(logo + softwareDiv + scrollItems + closeDiv);

        $.ajax({
            url: "getSoftware",
            type: "GET",
            data: {},
            success: function (data) {
               
                software_ids = data.id;
                software_screenshots = data.img;
                software_counter = data.screen_counter;
                software_description = data.desc;
                thumb_description = data.thumb_desc;
                var software_name = data.software_name;
                for (b = 0; b < data.id.length; b++) {
                    $(".items").append("<a class='mouse_hover' href='javascript:void(0)'><div onclick='showThumbs(" + data.id[b] + ")'>" +
                        "<img  src='" + data.logos[b] + "'/><p>"+software_name[b]+"</p></div></a>");
                    if (b == 0)
                        showThumbs(data.id[b]);
                }
            }
        });

    });

    function showThumbs(e) {
        $("#thumbs").empty();
        $("#softwareDescription").empty();

        var which_software = software_ids.indexOf(e.toString());
        current_software = which_software;
        var software_image_count = parseInt(software_counter[which_software]);
        var thumb_desc = thumb_description[current_software].split(",");
    
        $("#softwareDescription").append("<p>" + software_description[which_software] + "</p>");
        //first software
        if (which_software == 0) {
            for (j = 0; j < software_image_count; j++) {
                var image_name = software_screenshots[j].replace(/\\/g, "/").split("/")[6].split(".")[0];
                var image_desc = "";
                for (i = 0; i < thumb_desc.length; i++) {
                    if (thumb_desc[i].split("@@")[0] == image_name)
                        image_desc = thumb_desc[i].split("@@")[1];
                }
                $("#thumbs").append("<a style='text-decoration: none;' href='javascript:void(0);'>" +
                    "<div onclick='ShowBigImage(this)' id='" + j + "' class='thumbStyle' " +
                    "style='background:url(" + software_screenshots[j].replace(/\\/g, "/") + ") center center'>"+
                    "<div class='thumb_mask'><p class='thumb_text'>" + image_desc + "</p></div></div></a>");

                //$("#" + j + "").fadeIn((j + 1) * 1000);
                if (j == 0)
                    ShowBigImage($("#" + j + ""));
            }
        }
        else {
            var how_many_img_are_skipped = 0;
            for (j = 0; j < which_software; j++) {
                how_many_img_are_skipped += parseInt(software_counter[j]);
            }
            for (z = how_many_img_are_skipped; z < software_image_count + how_many_img_are_skipped; z++) {
                var image_name = software_screenshots[z].replace(/\\/g, "/").split("/")[6].split(".")[0];
                var image_desc = "";
                for (r = 0; r < thumb_desc.length; r++) {
                    if (thumb_desc[r].split("@@")[0] == image_name)
                        image_desc = thumb_desc[r].split("@@")[1];
                }

                $("#thumbs").append("<a style='text-decoration: none;' href='javascript:void(0);'>" +
                    "<div onclick='ShowBigImage(this)' id='" + z + "' class='thumbStyle' "+
                    "style='background:url(" + software_screenshots[z].replace(/\\/g, "/") + ") center center'>"+
                    "<div class='thumb_mask'><p class='thumb_text'>" + image_desc + "</p></div></div></a>");
                //$("#" + z + "").fadeIn((z + 1) * 1000);
                if (z == how_many_img_are_skipped)
                    ShowBigImage($("#" + z + ""));
            }
        }
    }

    function ShowBigImage(e) {
        $("#img_container img").css('margin-top', '25%');
        $("#img_container img").attr("src", "/Content/images/loader.gif");
        var image_src = $(e).css("background-image").replace("url(", "").replace(")", "").replace("/thumbs", "");
        var img = new Image();
        img.src = image_src;
        $(img).load(function () {
            $("#img_container img").attr("src", img.src);
            $("#img_container img").css('margin-top', '50px');
            $("#img_container img").fadeIn(500);
        });
        //$("#img_container").empty();
        //$("#img_container").append("<img class='main_image' src='" + image_src + "'/>");
        //$(".main_image").fadeIn(1000);
    }

</script>


