        var email = false;
        $('#image_button').click(function () {
            var comp_name = document.forms["form_mail"]["company_name"].value;
            var name_lastname = document.forms["form_mail"]["name_lastname"].value;
            var phone = document.forms["form_mail"]["phone_number"].value;
            var emaila = document.forms["form_mail"]["e_mail"].value;
            var message = document.forms["form_mail"]["message"].value;


            validate_email();
            $.ajax({
                type: "POST",
                url: "Site/SendForm",
                data: "{'company': '" + comp_name + "','name_lastname': '" + name_lastname + "','phone': '" + phone + "','email': '" + emaila + "','message': '" + message + "','boolEmail': '" + email + "'}",
                contentType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (msg) {
                    if (msg.msg == "Ok") {
                        $("#maila_form").css("display", "none");
                        hiddenContent1.delay(2000).slideUp(2000);
                    }
                    if (msg.msg == "NOk") {

                    }
                }
            });

            var email_bool = false;

            if (comp_name == "" && name_lastname == "") {
                $('#err1').fadeIn(1000);
                $('#err2').fadeIn(1000);
                $('#err1').fadeOut(1000);
                $('#err2').fadeOut(1000);
            }
            if (emaila != "" && email == false || emaila == "") {
                $('#err3').fadeIn(1000);
                $('#err3').fadeOut(1000);
            }

            if (message == "") {
                $('#err4').fadeIn(1000);
                $('#err4').fadeOut(1000);
            }
        });

        function validate_email() {

            var reg = /^([A-Za-z0-9_\-\.])+\@@([A-Za-z0-9_\-\.])+\.([A-Za-z]{2,4})$/;
            var address = document.forms["form_mail"]["e_mail"].value;
            if (reg.test(address) == false) {
                email = false;
            }
            else {
                email = true;
            }
        }
