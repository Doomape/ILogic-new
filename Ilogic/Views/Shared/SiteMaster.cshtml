    <script type="text/javascript">

        $(window).resize(function () {
            var height = parseInt($(window).height() - 210);
            $("#wrapper").css("height", height);
            $("html").css("height", height);
        });

        $(document).ready(function () {
            var height = parseInt($(window).height() - 210);
            $("#wrapper").css("height", height);
            $("html").css("height", height);
        });

        $(document).ready(
		function meni() {
		    $('#dock').Fisheye(
				{
				    maxWidth: 15,
				    items: 'a',
				    itemsText: 'span',
				    container: '.dock-container',
				    itemWidth: 60,
				    proximity: 30,
				    halign: 'center'
				}
			)
		}
	);
        var twiterCheck;
        var mailCheck;
        var hiddenContent = $('#open_twitter_form');
        $("#twitter_form").click(function (event) {
            // Cancel the default event (this isn't a real link).
            event.preventDefault();
            // Check to see if the content is visible.
            if (hiddenContent.is(":visible")) {
                // Hide it slowly.
                if (hiddenContent.css("height") == "400px") {
                    hiddenContent.slideUp(2000);
                    twiterCheck= false;
                }
            } else {
                // Show it slowly.
                if (hiddenContent.css("height") == "400px") {
                    hiddenContent.slideDown(2000);
                    twiterCheck= true;
                }
            }
        });
        var hiddenContent1 = $('#open_mail_form');
        $("#mail_form").click(function (event) {
            // Cancel the default event (this isn't a real link).
            event.preventDefault();
            // Check to see if the content is visible.
            if (hiddenContent1.is(":visible")) {
               // Hide it slowly.
                if (hiddenContent1.css("height") == "400px") {
                    hiddenContent1.slideUp(2000);
                    mailCheck= false;
                }
            } else {
                // Show it slowly.
                if (hiddenContent1.css("height") == "400px") {
                    hiddenContent1.slideDown(2000);
                    $("#succesed_msg").css("display", "none");
                    $(".contact_form").fadeIn();
                    mailCheck= true;
                }
            }
        });
        $("#content").click(function (event) {
            if (mailCheck) {
                // Hide it slowly.
                if (hiddenContent1.css("height") == "400px") {
                    hiddenContent1.slideUp(2000);
                    mailCheck= false;
                }
            }
            if (twiterCheck) {
                // Hide it slowly.
                if (hiddenContent.css("height") == "400px") {
                    hiddenContent.slideUp(2000);
                    twiterCheck= false;
                }
            }
        });
        function redirectAsp() {
            window.location.href = "/Site/Asp";
        }
        function redirectElectronic() {
            window.location.href = "/Site/Electronics";
        }
        function redirectPhp() {
            window.location.href = "/Site/Php";
        }
        //if ($('#open_twitter_form').css('display') == 'none' || $('#open_twitter_form').css("height") == "0px") {
        //    $('#open_twitter_form').slideDown(2000, function () {
        //        $('#open_twitter_form').css("height", "500px");
        //    });

        //}
        //else {

