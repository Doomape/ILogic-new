        //    $("#footer").append("<div id='open_twitter_form'></div>");
        //    $('#open_twitter_form').slideUp(2000, function () {
        //        //$('#open_twitter_form').css("height", "0px");
        //       // $('#open_twitter_form').css('display', "none");
        //    });
        //}
        function isNumber(n) {
            return !isNaN(parseFloat(n)) && isFinite(n);
        }
        $("input[id='broj']").keyup(function () {
            if ($("input[id='broj']") != "" && isNumber($("input[id='broj']").val())) {
                document.getElementById("broj").required = true;
            }
            else
                document.getElementById("broj").required = false;
        });
        $('.submit').click(function () {
            var name = $('#ime').val();
            var email = $('#email').val();
            var number = $('#broj').val();
            var message = $('#poraka').val();
            var required_inputs = new Array();
            for (var i = 0; i < $(".contact_input").length; i++) {
                if ($($(".contact_input")[i]).attr('required')) {
                    required_inputs.push($($(".contact_input")[i]));
                }
            }
            var pom = false;

            for (var j = 0; j < required_inputs.length; j++) {
                if (required_inputs[j].val() == "")
                    pom = true;
            }
            if (pom == false) {
                $.ajax({
                    url: "Sendform",
                    type: "GET",
                    data: {

                        ime: name,
                        broj: number,
                        email: email,
                        poraka: message,
                    },
                    success: function (result) {
                        //alert(result.msg);
                        $(".contact_form").fadeOut(700);

                        setTimeout(function () { $("#succesed_msg").css("display", "block"); }, 700);
                        setTimeout(function () { hiddenContent1.slideUp(2000); }, 1000);
                    }
                });
            } else {
                alert("Enter the required values");
            }
        });
    </script>
